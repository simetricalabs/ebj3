<?xml version="1.0" encoding="utf-8"?>
<extension type="file" version="3.0.0" method="upgrade" mosetsExtension="mtreeFieldtype">
	<name>coreprice</name>
	<caption>Price</caption>
	<author>Lee Cher Yeong</author>
	<creationDate>Dec 2013</creationDate>
	<copyright>(C) 2011-2013 Mosets Consulting. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>mtree@mosets.com</authorEmail>
	<authorUrl>www.mosets.com</authorUrl>
	<version>3.5.0</version>
	<description></description>
	<useElements>0</useElements>
	<useSize>0</useSize>
	<taggable>0</taggable>
	<fileset>
		<files folder="." target="administrator/components/com_mtree/fieldtypes/coreprice">
			<filename>coreprice.php</filename>
			<filename>coreprice.xml</filename>
			<filename>index.html</filename>
		</files>
	</fileset>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.fld_coreprice.ini</language>
	</languages>
	<config>
		<fields>
			<fieldset name="basic">
                <field name="whenPriceIs0" type="radio" default="3" class="btn-group" label="When Price is 0" description="Control what to show when the price is 0.00. If you set this to show 'Free', you can change the override the text in your language file using the language key FLD_COREPRICE_FREE.">
                    <option value="1">Show 0.00</option>
                    <option value="2">Show 'Free'</option>
                    <option value="3">Hide Field</option>
                </field>

			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension">http://update.mosets.com/mtree/fieldtypes/coreprice.xml</server>
	</updateservers>
</extension>