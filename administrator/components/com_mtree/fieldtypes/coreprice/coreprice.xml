<?xml version="1.0" encoding="utf-8"?>
<extension type="file" version="3.0.0" method="upgrade" mosetsExtension="mtreeFieldtype">
	<name>coreprice</name>
	<caption>Price</caption>
	<author>Lee Cher Yeong</author>
	<creationDate>June 2011</creationDate>
	<copyright>(C) 2011 Mosets Consulting. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>mtree@mosets.com</authorEmail>
	<authorUrl>www.mosets.com</authorUrl>
	<version>3.0.0</version>
	<description></description>
	<useElements>0</useElements>
	<useSize>0</useSize>
	<taggable>0</taggable>
	<fileset>
		<files folder="." target="administrator/components/com_mtree/fieldtypes/coreprice">
			<filename>coreprice.php</filename>
			<filename>coreprice.xml</filename>
			<filename>index.html</filename>
		</files>
	</fileset>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.fld_coreprice.ini</language>
	</languages>
	<config>
		<fields>
			<fieldset name="basic">
				<field name="displayFree" type="radio" default="1" class="btn-group" label="Display Free when price is 0" description="Setting this to Yes will display the text Free when the price is 0.00.">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension">http://update.mosets.com/mtree/fieldtypes/coreprice.xml</server>
	</updateservers>
</extension>